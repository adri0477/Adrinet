{
	"parser": "babel-eslint",
	"extends": ["airbnb", "plugin:prettier/recommended"],
	"env": {
		"browser": true,
		"node": true
	},
	"plugins": ["prettier"],
	"rules": {
		"linebreak-style": "off",
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1,
				"VariableDeclarator": 1
			}
		],
		"no-tabs": 0,
		"react/prop-types": 0,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"no-console": "off",
		"comma-dangle": "off",
		"react/jsx-filename-extension": "off",
		"prettier/prettier": "error"
	}
}
